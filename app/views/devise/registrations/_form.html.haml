#coding: utf-8

- semantic_form_for resource, :url => registration_path(resource_name), :as => resource_name do |form|
  -#= form.error_messages
  -#= form.semantic_errors
  -#= devise_error_messages!
  - form.inputs do
    = form.input :email, :label => 'Email', :as => :string,  :input_html => { :style => "width: 150px" }
    = form.input :nickname, :label => '昵称', :as => :string,  :input_html => { :style => "width: 150px" }
    = form.input :password, :label => '密码', :as => :password,  :input_html => { :style => "width: 150px" }
    = form.input :password_confirmation, :label => '密码确认', :as => :password,  :input_html => { :style => "width: 150px" }
  - form.buttons do
    = form.commit_button :label => '注册'

-#= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  -#= devise_error_messages!
  -#%p
    -#= f.label :name
    -#%br/
    -#= f.text_field :name
  -#%p
    -#= f.label :password
    -#%br/
    -#= f.password_field :password
  -#%p
    -#= f.label :password_confirmation
    -#%br/
    -#= f.password_field :password_confirmation
  -#%p= f.submit "Sign up"
-#= render :partial => "devise/shared/links"
